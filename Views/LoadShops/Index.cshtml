@model RatingApp.Models.movieshop
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/registrationpage.cshtml";
}
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<link href="~/Content/addnewshoptoregister/style.css" rel="stylesheet" />



<section id="home" class="s-home">
    <div class="agile-header">
        <h1>Register Your Shop Here</h1>
        <p>If you have any queries on Sales please take a moment to fill up this form and one of our sales representative will contact you soon.</p>
    </div>
    <!--//header-->
    <!--main-->
    <div class="agileits-main">
        <div class="wrap">
            <form action="registershop" method="post" new { enctype="multipart/form-data" }>
                <ul>
                    <li class="text">Shop name  :  </li>
                    <li>@*<input name="name" type="text" required>*@ @Html.EditorFor(x => x.shopname)  </li>
                    <li>@Html.ValidationMessageFor(model => model.shopname, "", new { @class = "text-danger" })</li>
                </ul>
                <ul>
                    <li class="text">Shop Owner  :  </li>
                    <li>@*<input name="organization" type="text" required>*@@Html.EditorFor(x => x.ownername)  @Html.ValidationMessageFor(model => model.ownername, "", new { @class = "text-danger" })</li>
                </ul>
                <ul>
                    <li class="text">Address   :  </li>
                    <li>@*<input name="E-mail" type="text" required>*@@Html.EditorFor(x => x.address1)  @Html.ValidationMessageFor(model => model.address1, "", new { @class = "text-danger" })</li>
                </ul>
                <ul>
                    <li class="text">Address 2  :  </li>
                    <li>@*<input name="contact" type="text" required>*@@Html.EditorFor(x => x.address2) @Html.ValidationMessageFor(model => model.address2, "", new { @class = "text-danger" })</li>
                </ul>
                <ul>
                    <li class="text">Land Number  :  </li>
                    <li>@*<input name="mobile" type="text" required>*@@Html.EditorFor(x => x.landno) @Html.ValidationMessageFor(model => model.landno, "", new { @class = "text-danger" })</li>
                </ul>
                <ul>
                    <li class="text">Mobile Number  :  </li>
                    <li>@*<input name="fax" type="text" required>*@@Html.EditorFor(x => x.mobileno) @Html.ValidationMessageFor(model => model.mobileno, "", new { @class = "text-danger" })</li>
                </ul>
                <ul>
                    <li class="text">Fax  :  </li>
                    <li>@*<input name="addr 1" type="text" required>*@@Html.EditorFor(x => x.fax) @Html.ValidationMessageFor(model => model.fax, "", new { @class = "text-danger" })</li>
                </ul>
                <ul>
                    <li class="text">Country  :  </li>
                    <li>@*<input name="addr 2" type="text" required>*@@Html.EditorFor(x => x.country) @Html.ValidationMessageFor(model => model.country, "", new { @class = "text-danger" })</li>
                </ul>
                <ul>
                    <li class="text">State  :  </li>
                    <li>@*<input name="country" type="text" required>*@@Html.EditorFor(x => x.state) @Html.ValidationMessageFor(model => model.state, "", new { @class = "text-danger" })</li>
                </ul>
                <ul>
                    <li class="text">City  :  </li>
                    <li>@*<input name="state" type="text" required>*@@Html.EditorFor(x => x.city) @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })</li>
                </ul>
                <ul>
                    <li class="text">Zip Code  :  </li>
                    <li>@*<input name="city" type="text" required>*@@Html.EditorFor(x => x.zipcode) @Html.ValidationMessageFor(model => model.zipcode, "", new { @class = "text-danger" })</li>
                </ul>
                <ul>
                    <li class="text">Shop Established Date  :  </li>
                    <li><input name="dateC" type="date" required style="margin-left:7px;"></li>
                </ul>
                <ul>
                    <li class="text">Business inquiry  :  </li>
                    <li><textarea name="txt1"></textarea></li>
                </ul>
                <ul>
                    <li class="text">Shop Image  :  </li>
                    <li><input name="ImageFile" type="file" required style="margin-left:20px;"></li>
                </ul>
                <div class="clear"></div>
                <div class="agile-submit">
                    <input type="submit" value="submit">
                    <input type="reset" value="reset">
                </div>
            </form>
        </div>
    </div>

</section>