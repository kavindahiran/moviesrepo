@*Wrapper for slides*@



<div class="item active">
    <img src="https://wallpaperaccess.com/full/1076854.jpg" style="height:500px; width:100%" class="mySlides" alt="Chania">
    <div class="carousel-caption">
        <h1>Now Showing</h1>
        <p>LA is always so much fun!</p>
    </div>
</div>
@foreach (var item in Model)
{

    <div class="item">
        <img src="@Url.Content(item.imagepath)" style="height:500px; width:100%" class="mySlides" alt="Chicago">
        <div class="carousel-caption">
            <h1>Now Showing</h1>
            <p>@item.moviename</p>
        </div>
    </div>
}
