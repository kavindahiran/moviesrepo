@model RatingApp.Models.showingmodelcollection
@{
    ViewBag.Title = "selecthall";
    Layout = "~/Views/Shared/ticketbooking.cshtml";
}
<link href="~/Content/bookhall/x.css" rel="stylesheet" />
<script src="~/Content/bookhall/main.js"></script>
<link href="~/Content/bookhall/material-design-iconic-font.min.css" rel="stylesheet" />
<script src="~/Content/bookhall/jquery-ui.min.js"></script>
<link href="~/Content/bookhall/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>





<div id="myCarousel" class="carousel slide" data-ride="carousel">
    @*Indicators*@
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>


    <div class="carousel-inner" style="-webkit-transition: 0.1s ease-in-out left;-moz-transition: 0.1s ease-in-out left; -o-transition: 0.1s ease-in-out left; transition: 0.1s ease-in-out left;">
        @Html.Partial("~/Views/Booktickets/loadimage.cshtml", Model.ns)
    </div>

    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>


</div>



<div class="main">

    <!--       <div class="header">
              <img src="images/header-text.png" alt="">
              <img src="images/dots.png" alt="">
          </div> -->
    @Html.Partial("~/Views/Booktickets/bookhall.cshtml", Model.cm)

</div>



