@model RatingApp.Models.indexnewsforum
@{
    ViewBag.Title = "newsdetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/addnewtime/slick-theme.css" rel="stylesheet" />
<link href="~/Content/addnewtime/slick.css" rel="stylesheet" />
<link href="~/Content/addnewtime/nouislider.min.css" rel="stylesheet" />
<link href="~/Content/addnewtime/style.css" rel="stylesheet" />



<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- Product main img -->
            <div class="col-md-5 col-md-push-2">
                @Html.Partial("~/Views/Shared/newsphotogalleryload.cshtml", Model.con);
            </div>
            <!-- /Product main img -->
            <!-- Product thumb imgs -->
            <div class="col-md-2  col-md-pull-5">
                @Html.Partial("~/Views/Shared/newsphotogallery2.cshtml", Model.con);
            </div>
            <!-- /Product thumb imgs -->
            <!-- Product details -->
            <div class="col-md-5">
                <div class="product-details">
                    <h2 class="product-name">@Model.nf.title</h2>
                    <div>
                        <div class="product-rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                        </div>

                    </div>
                    <div>
                        <h3 class="product-price">@Model.nf.price<del class="product-old-price">$990.00</del></h3>
                        <span class="product-available">@Model.nf.highlightedevent</span>
                    </div>
                    <p>@Model.nf.discription</p>



                    <div class="add-to-cart">

                        <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> @Model.nf.category</button>
                    </div>

                    <ul class="product-btns">
                        <li><a href="#"><i class="fa fa-heart-o"></i> add to wishlist</a></li>
                        <li><a href="#"><i class="fa fa-exchange"></i> add to compare</a></li>
                    </ul>

                    <ul class="product-links">
                        <li>Category:</li>
                        <li><a href="#">Headphones</a></li>
                        <li><a href="#">Accessories</a></li>
                    </ul>

                    <ul class="product-links">
                        <li>Share:</li>
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        <li><a href="#"><i class="fa fa-envelope"></i></a></li>
                    </ul>

                </div>
            </div>
            <!-- /Product details -->
            <!-- Product tab -->
        </div>
    </div>
</div>

<script src="~/Content/addnewtime/jquery.min.js"></script>
<script src="~/Content/addnewtime/bootstrap.min.js"></script>
<script src="~/Content/addnewtime/slick.min.js"></script>
<script src="~/Content/addnewtime/nouislider.min.js"></script>
<script src="~/Content/addnewtime/jquery.zoom.min.js"></script>
<script src="~/Content/addnewtime/main.js"></script>