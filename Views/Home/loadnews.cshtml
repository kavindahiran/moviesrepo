@model  List<RatingApp.Models.newsforum>







    <div class="news-slider">
        @foreach (var item in Model)
        {


         
                <div class="single-news">
                    <div class="news-bg-1" style="background-image: url('@Url.Content(item.imagepath)'); background-repeat:no-repeat"></div>
                    <div class="news-date">
                        <h2><span>@item.date</span> </h2>
                        <h1>Event</h1>
                    </div>
                    <div class="news-content">
                        <h2>@item.title</h2>
                        <p>@item.discription</p>
                    </div>
                    <a href="@Url.Action("newsdetails", "dashboard", new { id = item.id })">Read More</a>
                </div>
            

        }
    </div>

